#! /usr/bin/env Rscript

library(scribe, lib.loc = Sys.getenv("R_LIBS_SCRIBE", "~/R/scribe-library"))
library(
  pak,
  lib.loc = Sys.getenv("R_LIBS_PAK", "~/R/pak-library"),
  include.only = c("cache_clean", "meta_clean")
)

ca <- command_args()
ca$add_argument(
  "--cache",
  action = "flag",
  default = TRUE,
  info = "cache_clean()"
)
ca$add_argument(
  "--meta",
  action = "flag",
  default = TRUE,
  info = "meta_clean()"
)
ca$add_argument(
  "--remove",
  action = "flag",
  default = FALSE,
  info = "remove {pak}"
)

params <- ca$parse()

if (params$cache) {
  message("i cleaning cache")
  cache_clean()
}

if (params$meta) {
  message("i cleaning meta")
  meta_clean(force = TRUE)
}

if (params$remove) {
  message("i removing pak")
  utils::remove.packages("pak")
}

message("i done")
quit()
